[sqlfluff]
dialect = tsql
exclude_rules = CP01, CP02, LT04  # Replacing L009, L029, L034 equivalents
max_line_length = 120

[sqlfluff:rules]
max_line_length = 80
indent_unit = space

[sqlfluff:rules:L016]  # Line too long
max_line_length = 50

[sqlfluff:rules:L029]  # Keyword immediately after bracket
require_spacing = true

[sqlfluff:rules:L006]  # Operators should be surrounded by space
allow_newlines = false