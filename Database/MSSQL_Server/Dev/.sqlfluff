[sqlfluff]
dialect = tsql
exclude_rules = CP01,CP02  # Only exclude rules you truly need to skip
max_line_length = 120

[sqlfluff:rules]
tab_space_size = 4

[sqlfluff:indentation]
indent_unit = space

# Layout Rules
[sqlfluff:rules:layout.long_lines]  # Replaces L016
max_line_length = 80

[sqlfluff:rules:layout.spacing]  # Replaces L006
allow_newlines = false

# Capitalisation Rules
[sqlfluff:rules:capitalisation.keywords]  # Replaces L010
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]  # Replaces L014
extended_capitalisation_policy = upper

# References Rules
[sqlfluff:rules:references.keywords]  # Replaces L029
require_spacing = true