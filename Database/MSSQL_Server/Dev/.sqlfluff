[sqlfluff]
dialect = tsql
exclude_rules = L009, L029, L034  # Avoid stricter rules for now
#templater = jinja  # Safe default

[sqlfluff:rules]
max_line_length = 120

[sqlfluff:rules:L003]
tab_space_size = 4

[sqlfluff:rules:L010]
capitalisation_policy = consistent

[sqlfluff:rules:L014]
extended_capitalisation_policy = consistent

[sqlfluff:rules:L019]
comma_style = trailing